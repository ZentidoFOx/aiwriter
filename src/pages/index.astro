<Layout title="AI WRITER - Generador de Contenido IA Gratuito by Turin.dev">
	<!-- Hero Section -->
	<section class="gradient-bg py-12 sm:py-16 lg:py-20 px-4 sm:px-6 lg:px-8">
		<div class="max-w-5xl mx-auto text-center">
